package EjerciciosMario;

public class Repasodo {

	public static void main(String[] args) {
		/* Generar 2 matrices con numeros aleatorios, sacar los valores de la diagonal de las 2 matrices
		 * almacenar cada elemento en un array y sumar los 2 array */
		
		//Declaramos y instanciamos las dos matrices
		int f=3, c=3;
		int [][] matriz = new int [f][c];
		int [][] matriz2 = new int [f][c];
		int contador =0;
		int contador2=0;
		int contador3=0;
		int [] arr1 = new int [contador];
		int []arr2 = new int [contador2];
		int [] suma = new int [contador3];
		//Recorremos las matrices con numeros aleatorios
		for(int i =0;i<f;i++) {
			for (int j=0;j<c;j++) {
				matriz[i][j] = (int)(Math.random()*11);
				System.out.print(matriz[i][j] + " ");
				if(i==j){
				contador = contador + matriz[i][j];
			}
		}
			System.out.println(" ");
		}
		System.out.println("Primera suma diagonal de matriz 1 : "+ contador);
		
		for(int i =0; i<matriz2.length;i++) {
			for(int j=0;j<matriz2.length;j++) {
				matriz2[i][j]= (int)(Math.random()*11);
				System.out.print(matriz2[i][j] + " ");
				if(i==j) {
					contador2 = contador2 + matriz2[i][j];
				}
			}
			System.out.println(" ");
		}
		System.out.println("Segunda suma diagonal de matriz 2 : "+ contador2);
		
		contador3 = contador+contador2;
		System.out.println("La suma de los arrays con sus respectivas diagonales es : " + contador3);
		}
	}

