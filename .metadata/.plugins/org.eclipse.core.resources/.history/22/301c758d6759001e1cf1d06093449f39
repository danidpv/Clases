package Ficheros;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class Lecturas {

	public static void main(String[] args) {
		// TODO Auto-generated method stub Las palabras que son de 5 o mas de longitud, contar y imprimir
				//Contar el numero de palabras en el texto
				 String linea = "";
				 String CadenaCompleta = "";
				 String palabras [];
				 
					try {
						FileReader fr = new FileReader("mi_fichero_escritura.txt");
						BufferedReader lectura = new BufferedReader(fr);
							try {
								while((linea = lectura.readLine())!=null) {
									CadenaCompleta += linea+ " ";
									
								}
								System.out.println(CadenaCompleta);
							} catch (IOException e) {
								// TODO Auto-generated catch block
								e.printStackTrace();
							}
					} catch (FileNotFoundException e) {
						System.out.println("No se encontr√≥ el fichero");
					 }
			}
  }
